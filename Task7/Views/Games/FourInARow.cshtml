    <div data-row="1" data-column="5" class="cell empty"></div>
    <div data-row="1" data-column="6" class="cell empty"></div>

    <div data-row="2" data-column="0" class="cell empty"></div>
    <div data-row="2" data-column="1" class="cell empty"></div>

@{
    ViewData["Title"] = "Lobby";
}

<div class="uk-heading-medium uk-text-center">Welcome to the games lobby</div>

<div class="d-flex gap-2 justify-content-between mt-4">
    <button class="uk-button" uk-toggle="target: #new-game-modal">New game</button>
    <button class="uk-button" uk-toggle="target: #join-game-modal">Join game</button>
</div>

<div id="new-game-modal" uk-modal>
    <div class="uk-modal-dialog uk-margin-auto-vertical uk-modal-body">
        <h2 class="uk-modal-title uk-text-center">Select the game</h2>
        <div class="d-flex flex-column flex-sm-row gap-2 justify-content-between">
            <button class="uk-button">Tic Tac Toe</button>
            <button class="uk-button">Four In A Row</button>
        </div>
        <button class="uk-modal-close-full" uk-close></button>
    </div>
</div>

<div id="join-game-modal" uk-modal>
    <div class="uk-modal-dialog uk-margin-auto-vertical uk-modal-body">
        <h2 class="uk-modal-title uk-text-center">Select the game session</h2>
        <div id="game-sessions-panel">

        </div>
        <button class="uk-modal-close-full" uk-close></button>
    </div>
</div>